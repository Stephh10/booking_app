generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//PAYMNT ENUM

enum PlanType {
  basic
  essential
  premuim
}

enum SubscriptionStatus {
  active
  pending
  cancelled
  expired
}

enum PaymentStatus {
  completed
  pending
  failed
  refunded
}

//DOCTOR-USER MODEL

model User {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String   @unique
  phone      Int?
  password   String
  role       String   @default("doctor")
  speciality String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  country    String?
  city       String?
  address    String?
  postalCode Int?

  //payment details

  paypalCustomerId String?
  subscription     Subscription?

  profileImage ProfileImage? @relation("UserProfileImage")

  appointments        Appointment[]
  availabilities      DoctorAvailability[]
  patients            Patient[]
  passwordResetTokens PasswordResetToken[]
  payments            Payment[]
}

model Subscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, map: "subscription_user_fk")

  planType PlanType
  status   SubscriptionStatus @default(pending)

  paypalSubscriptionId String? @unique
  paypalOrderId        String? @unique
  paypalAgreementId    String? @unique

  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  billingCycleAnchor   DateTime?
  defaultPaymentMethod String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]

  @@index([userId])
  @@index([status])
  @@index([currentPeriodEnd])
  @@map("subscriptions")
}

model Payment {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Subscription reference
  subscriptionId String?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])

  // PayPal info
  paypalPaymentId String  @unique
  paypalOrderId   String? @unique
  paypalCaptureId String? @unique

  // Payment details
  amount      Float
  currency    String        @default("USD")
  status      PaymentStatus @default(pending)
  description String?

  // Metadata
  receiptUrl String?
  invoiceId  String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([subscriptionId])
  @@index([status])
  @@index([createdAt])
  @@map("payments")
}

model Plan {
  id           String   @id @default(cuid())
  name         PlanType @unique
  priceMonthly Float

  // Limits
  maxPatients     Int?
  maxAppointments Int?
  maxStorageGB    Int?
  hasAnalytics    Boolean @default(false)
  hasAPIAccess    Boolean @default(false)
  prioritySupport Boolean @default(false)

  // Display
  description String?
  color       String?
  popular     Boolean @default(false)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("plans")
}

model ProfileImage {
  id       String @id @default(cuid())
  publicId String @unique
  url      String
  format   String
  size     Int

  userId String @unique
  user   User   @relation("UserProfileImage", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

//PASSWORD RESET MODEL

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

//DOCTOR AVAILABILITY

model DoctorAvailability {
  id             String    @id @default(cuid())
  doctorId       String
  dayOfWeek      Int
  startTime      DateTime
  endTime        DateTime
  breakTimeStart DateTime?
  breakTimeEnd   DateTime?

  doctor User @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

//PATIENT MODEL

model Patient {
  id String @id @default(cuid())

  firstName   String
  lastName    String
  dateOfBirth DateTime?
  gender      String?
  nationalId  String?   @unique

  email      String?
  phone      String?
  city       String?
  postalCode String?

  doctorId String

  isSmoker              Boolean? @default(false)
  usesDrugs             Boolean? @default(false)
  dietType              String?
  exerciseFrequency     String?
  maritalStatus         String?
  occupation            String?
  emergencyContactName  String?
  emergencyContactPhone String?
  ethnicity             String?
  preferredLanguage     String?

  doctor         User            @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointments   Appointment[]
  medicalDetails MedicalDetails?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//MEDICAL DETAILS - PATIENT

model MedicalDetails {
  id        String  @id @default(cuid())
  patientId String  @unique
  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  diagnosis       String?
  bloodType       String?
  allergies       String?
  chronicDiseases String?
  medications     String?
  surgeries       String?
  familyHistory   String?
  height          Float?
  weight          Float?
  bloodPressure   String?
  heartRate       Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//APPOINTMENT MODEL

model Appointment {
  id        String    @id @default(cuid())
  date      DateTime
  time      DateTime?
  duration  Int       @default(30)
  reason    String?
  status    String    @default("scheduled")
  doctorId  String
  patientId String?
  diagnose  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  price           String?
  paid            Boolean         @default(false)
  paymentMethod   String?
  appointmentType AppointmentType @default(first_visit)
  insuranceId     String?

  doctor  User     @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient Patient? @relation(fields: [patientId], references: [id])
  Note    Note[]
}

enum AppointmentType {
  first_visit
  follow_up
  online
  emergency
}

//NOTE MODEL

model Note {
  id            String      @id @default(cuid())
  content       String
  isFlagged     Boolean     @default(false)
  createdAt     DateTime    @default(now())
  appointmentId String
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
}
